<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReadyWitted_Client.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="15">
            <Label 
            Text="Home Page"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Button 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            WidthRequest="300"
            x:Name="btnPres" Clicked="btnPres_Clicked" Text="Presentation" />
            <Button 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            WidthRequest="300"
            x:Name="btnSchema" Clicked="btnSchema_Clicked" Text="Presentation Schema" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
